<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.clicker.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.065"
        android:id="@+id/counter"
        app:layout_constraintHorizontal_bias="0.501"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/total_clicks_text_view" />

    <ImageButton
        android:id="@+id/click_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/counter"
        android:src="@drawable/shekel"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="258dp"
        app:layout_constraintVertical_bias="0.937" />

    <TextView
        android:id="@+id/power_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/click_power"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.025" />

    <TextView
        android:id="@+id/total_clicks_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Всего кликов: 0"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/power_text_view"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.025" />

    <Button
        android:id="@+id/upgrade_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upgrade_button"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toBottomOf="@+id/click_image_button"
        app:layout_constraintHorizontal_bias="0.27" />

    <TextView
        android:id="@+id/upgrade_cost_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        app:layout_constraintLeft_toRightOf="@+id/upgrade_button"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.305"
        android:layout_marginTop="49dp"
        app:layout_constraintTop_toBottomOf="@+id/click_image_button"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.278"
        app:layout_constraintBottom_toTopOf="@+id/reset_button" />

    <TextView
        android:id="@+id/shekel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Steal_shekel"
        app:layout_constraintLeft_toRightOf="@+id/click_image_button"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/click_image_button"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/click_image_button"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/upgrade_button"
        app:layout_constraintVertical_bias="0.914" />

    <TextView
        android:id="@+id/shekel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Стоимость улучшения"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/click_image_button"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.193"
        app:layout_constraintLeft_toRightOf="@+id/upgrade_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.525" />

</android.support.constraint.ConstraintLayout>
